//Import fonts
@import url('https://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Open+Sans')

//Variables
fontMonsterrat = 'Montserrat', sans-serif
fontOpenSans = 'Open Sans', sans-serif
colorPaloGreen = #05CC98
textShadow=  2px 2px 1px rgba(0, 0, 0, 0.0)

body
  font-family fontOpenSans

.axg-app
  display flex
  justify-content center
  align-items center
  height 100vh
  width 100vw
  .axg-view
    background colorPaloGreen
    padding 0px 20px
    min-width 1200px
    min-height 800px
    &#slide-cover
      background-image url('../img/introduction.png')
      background-size cover

      justify-content center
      align-items center
      display flex
      color white
      .axg-group
        display flex
        .logo
          background-image url('../img/logo.png')
          background-size: 200px
          background-position center left
          font-size: 0
          width 250px
          height: 150px
          border-right 5px solid white
          padding-right 50px
          margin-right 50px
        h1
          font-family fontMonsterrat
          margin-bottom 5px
          letter-spacing 1px
          font-size 48px
          text-shadow textShadow
          text-transform uppercase
        h2
          margin-top 0
          font-size 40px
          letter-spacing 1px
          text-shadow textShadow
        p
          margin-top 0
          font-size 20px
          text-transform uppercase
