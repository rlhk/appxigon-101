.slider
  position: absolute
  left 0
  top: -100px
  width 100vw
  height 100px
  display flex
  align-items flex-end
  .progress-bar
    background #EF8035
    height 10px
    width 100%
    display block
    position relative
    transition all 0.5s ease
    .progress
      background #426AEA
      position: absolute;
      left 0
      height 20px
      transition all 0.5s ease

.emoji-form
  display flex
  align-items center
  justify-content center
  height 100vh
  width 100%
  opacity 0.5
  transition: all 0.4s ease-in
  padding 5%
  .emoji
    display inline-block
    img
      max-width 100%
  &.visible
    opacity 1
    cursor pointer

 @keyframes fadeOut {
    0% {opacity: 1; transform:translateY(0px)}
    100% {opacity: 0;transform:translateY(-60vh)}
 }

.emoji-effect
  position absolute
  bottom 0
  width 100%
  .emoji-row
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    .emoji
      display: block;
      flex-shrink: 0;
      width 70px
      height 70px
      img
        max-width 100%
      &.active
        animation-name fadeOut
        animation-iteration-count 1
        animation-fill-mode: forwards
        transition: all 0.3s ease-in
        background-size cover

.animate-in {
    -webkit-animation: fadeIn 0.7s ease-in;
    animation: fadeIn 0.7s ease-in;
}
.animate-out {
    -webkit-transition: opacity .5s;
    transition: opacity .5s;
    opacity: 0;
}
@-webkit-keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}
@keyframes fadeIn {
    from { opacity: 0.2; }
    to { opacity: 1; }
}
