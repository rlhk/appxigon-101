//Import fonts
@import url('https://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Open+Sans')

//Variables
fontMonsterrat = 'Montserrat', sans-serif
fontOpenSans = 'Open Sans', sans-serif
colorGreen3 = #109F7A
textShadow=  2px 2px 1px rgba(0, 0, 0, 0.2)

body
  font-family fontOpenSans

section.slide
  display flex
  justify-content center
  align-items center
  height 100vh
  width 100vw
  .logo
    width 200px
  .slide-overlay
    background-color colorGreen3
    position absolute
    opacity 0.8
    height 100vh
    width 100vw
    z-index 1
  &.introduction
    h1
      font-family fontMonsterrat
      margin-bottom 5px
      letter-spacing 1px
      font-size 48px
      text-shadow textShadow
    h2
      margin-top 0
      font-size 40px
      letter-spacing 1px
      text-shadow textShadow
    background-image url('../img/introduction.jpeg')
    background-position top right
    background-repeat no-repeat
    background-size cover
    .slide-title
      display flex
      align-items center
      .left-content
        border-right 5px solid white
        padding-right 50px
      .right-content
        padding-left 50px
        color white
  .slide-content
      z-index: 2
